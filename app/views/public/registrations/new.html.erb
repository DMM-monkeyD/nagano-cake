<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">新規会員登録</span></h3>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="field row">
      <div class="col-2"><%= f.label :名前 %></div>
      <div class="col-10">
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :first_name, "（名）" %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :フリガナ %></div>
      <div class="col-10">
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana %>
        <%= f.label :first_name, "（メイ）" %>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :メールアドレス %></div>
      <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :"郵便番号(ハイフンなし)" %></div>
      <div class="col-5"><%= f.text_field :post_code %></div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :住所 %></div>
      <div class="col-5"><%= f.text_field :address %></div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :"電話番号（ハイフンなし）" %></div>
      <div class="col-5"><%= f.text_field :phone_number %></div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :"パスワード（６文字以上）" %></div>
      <div class="col-5"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>
    <div class="field row">
      <div class="col-2"><%= f.label :"パスワード（確認用）" %></div>
      <div class="col-5"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="actions row">
      <div class="col-2"></div>
      <div class="col-5 p-3"><%= f.submit "新規登録" %></div>
    </div>
  <% end %>

  <%= render "public/shared/links" %>
</div>
