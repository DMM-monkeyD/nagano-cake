<div class="container mt-5">
  <div class="row"><h1>配送先登録/一覧</h1>
  </div>
  <div class="row">
    <%= form_with model:@shipping_address, url: '/shipping_address', method: :post, local:true do |f| %>
      <p>郵便番号(ハイフンなし) 　　<%= f.text_field :post_code %></p>
      <p>住所　　　　　　　　　　　<%= f.text_field :address %></p>
      <p>宛名　　　　　　　　　　　<%= f.text_field :name %></p>
      <%= f.submit '新規登録' %>
    <% end %>
  </div>
  <div class="row mt-5">
    <div class="col-9">
      <table class = "table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
          </tr>
        </thead>
        <tbody>
          <% @shipping_addresses.each do |shipping_address| %>
            <tr>
              <td>〒<%= shipping_address.post_code.to_s.insert(3, "-") %></td>
              <td><%= shipping_address.address %></td>
              <td><%= shipping_address.name %></td>
              <td><%= link_to "編集する", edit_shipping_address_path(shipping_address.id) %></td>
              <td><%= link_to "削除", shipping_address_path(shipping_address.id), method: :delete %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>