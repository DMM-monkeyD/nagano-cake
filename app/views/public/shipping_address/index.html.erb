<h1>配送先登録/一覧</h1>

  <%= form_with model:@shipping_address, url: '/shipping_address', method: :post, local:true do |f| %>
    郵便番号(ハイフンなし)
    <%= f.text_field :post_code %>
    <br>
    住所
    <%= f.text_field :address %>
    <br>
    宛名
    <%= f.text_field :name %>
    <br>
    <%= f.submit '新規登録' %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shipping_addresses.each do |shipping_address| %>
        <tr>
          <td>
            <%= shipping_address.post_code %>
          </td>
          <td>
            <%= shipping_address.address %>
          </td>
          <td>
            <%= shipping_address.name %>
          </td>
          <td>
          <%= link_to "編集する", edit_shipping_address_path(shipping_address.id) %>
          </td>
          <td>
          <%= link_to "削除", shipping_address_path(shipping_address.id), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>