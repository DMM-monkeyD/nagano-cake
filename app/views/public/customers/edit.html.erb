<div class="container">
    <%= form_with model: @customer, url: customer_path, method: :patch, local: true do |f| %>
    <div class="row">
        <h3 class="p-3"><span class="header">会員情報編集<span></h3>
    </div>
    
    <div class="field row">
        <div class = "col-2"><%= f.label :氏名 %></div>
        <div class = "col-5">
            <%= f.text_field :last_name, autofocus: true %>
            <%= f.text_field :first_name %>
        </div>
    </div>
    <div class="field row">
        <div class = "col-2"><%= f.label :フリガナ %></div>
        <div class = "col-5">
            <%= f.text_field :last_name_kana, autofocus: true %>
            <%= f.text_field :first_name_kana %>
        </div>
    </div>
    <div class="field row">
        <div class = "col-2"><%= f.label :郵便番号 %></div>
        <div class = "col-5"><%= f.text_field :post_code %></div>
    </div>
    <div class="field row">
        <div class = "col-2"><%= f.label :住所 %></div>
        <div class = "col-5"><%= f.text_field :address %></div>
    </div>
    <div class="field row">
        <div class = "col-2"><%= f.label :電話番号 %></div>
        <div class = "col-5"><%= f.text_field :phone_number %></div>
    </div>
    <div class="field row">
        <div class = "col-2"><%= f.label :メールアドレス %></div>
        <div class = "col-5"><%= f.email_field :email %></div>
    </div>
    <div class="row">
        <div class="col-10 p-3 form-inline" >
            <div class="mr-3"><%= f.submit "編集内容を保存", class: 'btn btn-ex ml-5' %></div>
            <div class="mr-3"><%= link_to "退会する", unsubscribe_customers_path, class: 'btn btn-ex ml-5' %></div>
        </div>
    </div>
    <% end %>
</div>
