<h1>Public::Customers#edit</h1>

<h4>会員情報修正</h4>

<%= form_with model: @customer, url: customer_path, method: :patch, local: true do |f| %>
    <div class="field">
        <%= f.label :氏名 %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.text_field :first_name %>
    </div>
    <div class="field">
        <%= f.label :フリガナ %>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
    </div>
    <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :post_code %>
    </div>
    <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address %>
    </div>
    <div class="field">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number %>
    </div>
    <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div>
        <%= f.submit "編集内容を保存" %>
    </div>
<% end %>
    <div>
        <%= link_to "退会する", unsubscribe_customers_path %>
    </div>