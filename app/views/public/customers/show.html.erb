<h1>Public::Customers#show</h1>

<h4>マイページ</h4>

<h4>登録情報</h4>
<div>
    <%= link_to "編集する", edit_customer_path(current_customer) %>
</div>
<table>
    <tr>
        <td>氏名</td>
        <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
    </tr>
    <tr>
        <td>カナ</td>
        <td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
    </tr>
    <tr>
        <td>郵便番号</td>
        <td><%= current_customer.post_code %></td>
    </tr>
    <tr>
        <td>住所</td>
        <td><%= current_customer.address %></td>
    </tr>
    <tr>
        <td>メールアドレス</td>
        <td><%= current_customer.email %></td>
    </tr>
</table>

<h4>配送先</h4>
<%= link_to "一覧を見る", shipping_address_index_path %>

<h4>注文履歴</h4>
<%= link_to "一覧を見る", orders_path %>