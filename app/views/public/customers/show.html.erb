<!--<h1>Public::Customers#show</h1>-->

<div class="container">
    <div class="row">
        <h3 class="p-3"><span class="header">マイページ<span></h3>
    </div>
    <div class="row">
        <div class="col-10 form-inline">
        <!--<div class="col-10">-->
            <div class = "mr-3"><h4>登録情報</h4></div>
            <!--<h4>登録情報</h4>-->
            <div class = "mr-3">
                <%= link_to "編集する", edit_customer_path(current_customer), class: 'btn btn-ex ml-5' %>
            </div>
        </div>
        <div class="col-10">
            <table class="table table-bordered">
                <tr>
                    <td>氏名</td>
                    <td><%= current_customer.last_name %> <%= current_customer.first_name %></td>
                </tr>
                <tr>
                    <td>カナ</td>
                    <td><%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></td>
                </tr>
                <tr>
                    <td>郵便番号</td>
                    <td><%= current_customer.post_code %></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= current_customer.address %></td>
                </tr>
                <tr>
                    <td>メールアドレス</td>
                    <td><%= current_customer.email %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-10 form-inline">
            <div class = "mr-3"><h4>配送先</h4></div>
            <div class = "mr-3">
                <%= link_to "一覧を見る", shipping_address_index_path, class: 'btn btn-ex ml-5' %>
            </div>
        </div>
        <div class="col-10 form-inline">
            <div class = "mr-3"><h4>注文履歴</h4></div>
            <div class = "mr-3">
                <%= link_to "一覧を見る", orders_path, class: 'btn btn-ex ml-5' %>
            </div>
        </div>
    </div>
</div>
