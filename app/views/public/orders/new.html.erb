<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">注文履歴一覧</span></h3>
  </div>

  <div class="row">
    <div class="col-12">
      <%= form_with model: @order, url: log_orders_path, local: true do |f| %>
        <h5><strong>支払方法</strong></h5>
        <div class="col-sm-4 ml-3">
          <%= f.radio_button :payment_method, "クレジットカード", checked: "checked" %>
          <%= f.label :payment_method, "クレジットカード", value: "クレジットカード"%>
          <br>
          <%= f.radio_button :payment_method, "銀行振込" %>
          <%= f.label :payment_method, "銀行振込", value: "銀行振込"  %>
        </div>

        <div class="mt-2">
          <h5><strong>お届け先</strong></h5>
          <div class="col-sm-4 ml-3">
            <%= f.radio_button :address_option, 0, checked: "checked" %>
            <%= f.label :order_address, "ご自身の住所" %>
          </div>
          <div class="col-sm-4 ml-5">
            <p>〒<%= @customer.post_code.to_s.insert(3, "-") %><br>
              住所：　<%= @customer.address %><br>
              宛名：　<%= @customer.last_name %><%= @customer.first_name %>
            </p>
          </div>
        </div>
        
        <div class="mt-2">
          <div class="col-sm-4 ml-3">
            <%= f.radio_button :address_option, 1 %>
            <%= f.label :order_address, "登録済住所から選択" %>
          </div>
          <div class="col-sm-4 ml-5">
            <%= f.collection_select :customer_id, current_customer.shipping_addresses.all, :id, :address, prompt: "住所を選択してください" %>
          </div>
        </div>
        
        <div class="mt-2">
          <div class="col-sm-4 ml-3 mt-2">
            <%= f.radio_button :address_option, 2 %>
            <%= f.label :order_address, "新しいお届け先" %>
          </div>
          <div class="field col-sm-12 ml-4">
            <%= f.label :post_code, "郵便番号(ハイフンなし)", class: "col-lg-3" %>
            <%= f.text_field :post_code %>
          </div>
          <div class="field col-sm-12  ml-4">
            <%= f.label :address,"住所", class: "col-lg-3" %>
            <%= f.text_field :address, size:"60x60"%>
          </div>
          <div class="field col-sm-12  ml-4">
            <%= f.label :name,"宛名", class: "col-lg-3" %>
            <%= f.text_field :name, size:"30x30" %>
          </div>
        </div>
        
        <div class="field col-sm-12 text-center mt-2">
          <%= f.submit "確認画面へ進む",class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>