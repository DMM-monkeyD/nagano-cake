<div class="container ml-4 mt-5">
  <div class="row">
    <div class="col-3">
      <div class="card-header text-white bg-dark ">ジャンル一覧</div>
      <div class="card-body">
        <% @genres.each do |genre| %>
          <p class="card-text"><%= genre.name %></p>
        <% end %>
      </div>
    </div>
    <div class = "col-lg-8">
      <h3>商品一覧<span>(全<%= @items_count %>件)</span></h3>
      <div class ="wrapper grid" >
        <% @items.each do |item| %>
          <div class="card" style="width: 16rem;">
            <%= link_to item_path(item) do %>
              <div class="card-img-top"><%= image_tag item.image, width:"254px", height:"185px" %></div>
              <div class="card-title lead"><h5 class="font-monospace text-center"><%= item.name %></h5></div>
            <% end %>
              <div class="card-text"><p class="lead text-center text-light bg-dark">商品説明</p></div>
              <div class="card-text"><%= item.introduction %></div>
              <p class="text-right lead">¥<%= item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @items %>
  </div>
</div>