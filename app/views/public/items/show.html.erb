<div class = "container">
  <div class = "row mx-0">
    <div class = "col-3">
      <%= image_tag @item.image, size: "300x250" %>
    </div>
    <div class = "col-3">
      <p>
      商品名<%= @item.name %>    
      </p>
      <p>
      商品説明<%= @item.introduction %>    
      </p>
      <p>
      税込価格<%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
      </p>
      <%= form_with model:@cart_item, url: cart_items_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount, *[1..20] %>
        <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>