<div class = "container mt-5">
  <div class = "row">
    <div class = "col-6">
      <%= image_tag @item.image, width:'100%', height:"100%" %>
    </div>
    <div class = "col-3 offset-1 mt-5">
      <p>商品名<%= @item.name %></p>
      <p>商品説明<%= @item.introduction %></p>
      <p>税込価格<%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</p>
      <%= form_with model:@cart_item, url: cart_items_path, method: :post, local:true do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :quantity, *[1..20] %>
        <%= f.submit 'カートに入れる' %>
      <% end %>
    </div>
  </div>
</div>
