<div class="container mt-5">
  <div class="row"><h1>商品編集</h1>
  </div>
  <div class="row mt-5">
    <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
          <p><%= f.label :"商品画像"%></p><p><%= f.file_field :image, accept: "image/*" %></p>
          <p><%= f.label :"商品名"%></p><p><%= f.text_field :name %></p>
          <p><%= f.label :"商品説明"%></p><p><%= f.text_area :introduction %></p>
          <p><%= f.label :"ジャンル"%></p><p><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %></p>
          <p><%= f.label :"税抜価格"%></p><p><%= f.text_field :price %>円</p>
          <p><%= f.label :"販売ステータス"%></p>
          <p><%= f.radio_button :is_active, true %><%= f.label :is_active, '販売中', value: true %>
             <%= f.radio_button :is_active, false %><%= f.label :is_active, '販売停止中', value: false %>
          </p>
          <%= f.submit '変更を保存' %>
    <% end %>
  </div> 
</div>
