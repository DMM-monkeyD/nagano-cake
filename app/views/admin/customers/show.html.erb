<div class="container">
    <div class="row">
        <h3 class="p-2 bg-dark text-light">
            <span class="header">
                <%= @customer.last_name %>
                <%= @customer.first_name %>
                さんの会員詳細会員詳細
            </span>
        </h3>
    </div>
    <div class="form-group row">
        <div class="col-2">会員ID</div>
        <div class="col-5"><%= @customer.id %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">氏名</div>
        <div class="col-5">
            <%= @customer.last_name %>
            <%= @customer.first_name %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">フリガナ</div>
        <div class="col-5">
            <%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">郵便番号</div>
        <div class="col-5"><%= @customer.post_code %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">住所</div>
        <div class="col-5"><%= @customer.address %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">電話番号</div>
        <div class="col-5"><%= @customer.phone_number %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">メールアドレス</div>
        <div class="col-5"><%= @customer.email %></div>
    </div>
    <div class="form-group row">
        <div class="col-2">会員ステータス</div>
        <div class="col-5">
            <% if @customer.is_deleted == false %>
                有効
            <% else %>
                退会
             <% end %>
        </div>
    </div>
    <%= link_to "編集する", edit_admin_customer_path %>
    <%= link_to "注文履歴一覧を見る", admin_order_path(@customer) %>
</div>