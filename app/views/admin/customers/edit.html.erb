<div class="container mt-3">
    <div class="row">
        <h3 class="p-2 bg-dark text-light">
            <span class="header">
                <%= @customer.last_name %>
                <%= @customer.first_name %>
                さんの会員情報編集
            </span>
        </h3>
    </div>
    <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
        <div class="field row">
            <div class = "col-2"><%= f.label :会員ID %></div>
            <div class = "col-5"><%= @customer.id %></div>
        </div>
        <div class="field row">
            <div class = "col-2"><%= f.label :氏名 %></div>
            <div class = "col-5">
                <%= f.text_field :last_name, autofocus: true %>
                <%= f.text_field :first_name %>
            </div>
        </div>
        <div class="field row">
            <div class = "col-2"><%= f.label :フリガナ %></div>
            <div class = "col-5">
                <%= f.text_field :last_name_kana, autofocus: true %>
                <%= f.text_field :first_name_kana %>
            </div>
        </div>
        <div class="field row">
            <div class = "col-2"><%= f.label :郵便番号 %></div>
            <div class = "col-5"><%= f.text_field :post_code %></div>
        </div>
        <div class="field row">
            <div class = "col-2"><%= f.label :住所 %></div>
            <div class = "col-5"><%= f.text_field :address %></div>
        </div>
        <div class="field row">
            <div class = "col-2"><%= f.label :電話番号 %></div>
            <div class = "col-5"><%= f.text_field :phone_number %></div>
        </div>
        <div class="field row">
            <div class = "col-2"><%= f.label :メールアドレス %></div>
            <div class = "col-5"><%= f.email_field :email %></div>
        </div>
        <div class="field row">
            <div class = "col-2"><%= f.label :ステータス %></div>
            <div class = "col-5">
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, '有効', value: true %>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, '退会', value: false %>
            </div>
        </div>
        <div>
            <%= f.submit "変更を保存", class: 'btn btn-ex ml-5' %>
        </div>
    <% end %>
</div>