<div class="container mt-5">
  <div class="row">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <div class="row mt-5"> 
    <%= form_with model:@genre, url: '/admin/genres', method: :post, local:true do |f| %>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name %>
      <%= f.submit '新規登録' %>
    <% end %>
  </div>
  <div class = "row mt-5">
    <div class="col">
      <table class ="table-bordered">
        <tbody>
            <tr class="table-active">
              <td>ジャンル名</td>
              <td></td>
            </tr>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "Edit", edit_admin_genre_path(genre.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>