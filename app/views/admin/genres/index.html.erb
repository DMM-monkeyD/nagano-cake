<div class="container">
  <div class="row">
  <h3 class="p-3"><span class="header">ジャンル一覧・追加</span></h3>
  </div>
  <div class="row mt-5"> 
    <div class="col-5 offset-1">
      <%= form_with model:@genre, url: '/admin/genres', method: :post, local:true do |f| %>
        <%= render "admin/shared/error_messages", resource: @genre %>
        <%= f.label :ジャンル名 %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>
  <div class = "row mt-5">
    <div class="col-10 offset-1">
      <table class ="table table-hover table-inverse">
        <thead class = "thead-dark">
            <tr>
              <th>ジャンル名</th>
              <th></th>
            </tr>
        </thead>    
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "Edit", edit_admin_genre_path(genre.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>