<h1>ジャンル一覧・追加</h1>

  <%= form_with model:@genre, url: '/admin/genres', method: :post, local:true do |f| %>
    <div>
      <%= f.label :ジャンル名 %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit '新規登録' %>
  <% end %>
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th　colspan="2"></th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "Edit", edit_admin_genre_path(genre.id)%></td>
      </tr>
    <% end %>
    </tbody>
  </table>