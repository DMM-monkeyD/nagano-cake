<div class="container">
  <div class="row">
    <h3 class="p-3"><span class="header">管理者ログイン</span></h3>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row">
      <div class="col-2"><%= f.label :メールアドレス %></div>
      <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
    </div>
    
    <div class="field row">
      <div class="col-2"><%= f.label :パスワード %></div>
      <div class="col-5"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="actions row">
      <div class="col-2"></div>
      <div class="col-5 p-3"><%= f.submit "ログイン" %></div>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>

</div>
